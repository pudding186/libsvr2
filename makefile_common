#==============================================
#flags
#==============================================
ifeq ($(BUILD), DEBUG)
C_LFLAGS		= -std=gnu11 -g -Wall -D_DEBUG -DLINUX
CXX_LFLAGS 		= -std=gnu++11 -g -Wall -Woverloaded-virtual -D_DEBUG -DLINUX
endif

ifeq ($(BUILD), RELEASE)
C_LFLAGS		= -std=gnu11 -g -Wall -DNDEBUG -DLINUX
CXX_LFLAGS 		= -std=gnu++11 -g -Wall -Woverloaded-virtual -DNDEBUG -DLINUX
endif

